{
  "name": "LND Dashboard",
  "short_name": "lnd-dash",
  "start_url": "/",
  "display": "standalone",
  "permissions": [
    "audio-capture",
    "video-capture",
    "clipboard",
    "clipboardRead",
    "clipboardWrite"
  ],
  "protocol_handlers": {
    {
      "protocol": "lightning",
      "name": "Bitcoin Lightning",
      "uriTemplate": "https://127.0.0.1:8888/pay?invoice=%s"
    }
  }
}