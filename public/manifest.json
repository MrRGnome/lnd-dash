{
  "name": "LND Dashboard",
  "short_name": "lnd-dash",
  "start_url": "/",
  "display": "standalone",
  "icons": [
    {
      "src": "/images/lightning192.png",
      "type": "image/png",
      "sizes": "192x192"
    },
    {
      "src": "/images/lightning512.png",
      "type": "image/png",
      "sizes": "512x512"
    },
    {
      "src": "/images/lightning.png",
      "type": "image/png",
      "sizes": "any"
    }
  ],
  "permissions": [
    "audio-capture",
    "video-capture",
    "clipboard",
    "clipboardRead",
    "clipboardWrite",
    "cookies",
    "notifications"
  ],
  "protocol_handlers": [
    {
      "protocol": "lightning",
      "name": "Bitcoin Lightning",
      "uriTemplate": "https://127.0.0.1:8888/pay?invoice=%s"
    }
  ]
}